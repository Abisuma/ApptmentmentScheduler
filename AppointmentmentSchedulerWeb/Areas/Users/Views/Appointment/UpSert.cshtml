@model AppointViewModel 

<form method="post">
    <input asp-for="Appointment.Id" hidden />

    <div class=" border p-3 mt-4 ">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Appointment.Id == 0 ? "Create" : "Update") Appointments</h2>
            <hr />
        </div>

        
        <div class=" mb-3 row p-1">
            <label asp-for="Appointment.Name" class="p-0"></label>
            <input asp-for="Appointment.Name" class="form-control" />
            <span asp-validation-for="Appointment.Name" class="text-danger"></span>
        </div>
        <div class=" mb-3 row p-1">
            <label asp-for="Appointment.Description" class="p-0"></label>
            <input asp-for="Appointment.Description" class="form-control" />
            <span asp-validation-for="Appointment.Description" class="text-danger"></span>
        </div>

        <div class=" mb-3 row p-1">
            <label asp-for="Appointment.DateTime" class="p-0"></label>
            <input asp-for="Appointment.DateTime" class="form-control" />
            <span asp-validation-for="Appointment.DateTime" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                @if (Model.Appointment.Id == 0)
                {

                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }

                else
                {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }

            </div>
            <div class="col-6 col-md-3">

                <a asp-controller="Appointment" asp-action="Index" class="form-control btn btn-outline-secondary border">Back to List</a>
            </div>
        </div>
    </div>
</form>
