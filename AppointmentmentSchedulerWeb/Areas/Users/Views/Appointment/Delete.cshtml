@model Appointment

<form method="post">

    <div class=" border p-3 mt-4 ">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Appointment</h2>
            <hr />
        </div>
        <div class=" mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />

        </div>

        <div class=" mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />

        </div>

        <div class=" mb-3 row p-1">
            <label asp-for="DateTime" class="p-0"></label>
            <input asp-for="DateTime" disabled class="form-control" />

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>

            </div>
            <div class="col-6 col-md-3">

                <a asp-controller="Appointment" asp-action="Index" class="form-control btn btn-outline-secondary border">Back to List</a>
            </div>
        </div>
    </div>
</form>




