@model List<Appointment> 

<style>
    .logo {
        font-family: 'Lobster', cursive;
        font-size: 3.0rem;
    }
</style>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class=" col-6">
            <h2 class="text-primary logo">
                Appointments
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Appointment" asp-action="UpSert" class="btn btn-primary">
                Create
            </a>

        </div>
    </div>


  <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>

                     <th>
                        Description
                    </th>
                    <th>
                        Date
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
                <tbody>
                        @foreach(var item in Model)
                        {
                
                                 <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.DateTime</td>
                                         <td class=" btn-grp" role="group">
                        <a asp-controller="Appointment" asp-action="UpSert" asp-route-id="@item.Id"><box-icon name='pencil'></box-icon>Edit</a>
                        
                                          </td>
                                </tr>
            
                                
                        }
                </tbody>

    </table>
 </div>



   
